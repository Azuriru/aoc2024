{
	"include": [
		"."
	],
	"compilerOptions": {
		"allowJs": false,
		"allowImportingTsExtensions": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noImplicitAny": false,
		"noEmit": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ESNext"
		// "verbatimModuleSyntax": true,
	},
}